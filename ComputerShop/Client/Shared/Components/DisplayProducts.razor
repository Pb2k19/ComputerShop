<div class="card-columns">
    @foreach (var product in CategoryId == -1 ? 
                ProductsService?.Products ?? Enumerable.Empty<Product>() : 
                ProductsService?.Products.Where(x => x.CategoryId == CategoryId) ?? Enumerable.Empty<Product>())
    {
        <div class="cursorHand card" @onclick="e => OnProductCardClicked(product.Id)">
            <div class="card-img" style="background-image: url('@product.Images?.FirstOrDefault()?.Location');"> </div>
            <div class="card-body">
                <div class="card-name">
                    <h3 class="card-title">@product.Name</h3>
                </div>                
                <div class="d-flex card-price flex-column justify-content-center ">
                    @if (product.Price < product.PriceBeforeDiscount)
                     {
                        <h6 class="text-muted price-befor-discount">@product.PriceBeforeDiscount zł</h6>
                     }
                    <h4 class="justify-content-end price">@product.Price zł</h4>
                </div>
            </div>
        </div>
     }
</div>