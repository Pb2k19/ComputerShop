<style>
    .cart-button {
        width: 60px;
        height: 50px;
    }

    #cart-button span {
        font-size: 25px;
        text-align: center;
        vertical-align: central;
    }
</style>

<div class="  card-columns align-content-c">
    @foreach (var product in Products)
    {
        <div class="card">
            <div class="card-img cursorHand"
                 style="background-image: url('@product.Images?.FirstOrDefault()?.Location');"
                 @onclick="e => OnProductCardClicked(product.Id)">
            </div>
            <div class="card-body">
                <div class="card-name cursorHand" @onclick="e => OnProductCardClicked(product.Id)">
                    <h3 class="card-title">@product.Name</h3>
                </div>
                <div class="card-container">
                    <div class="row h-100 align-items-center">
                        <div class="col-auto">
                            <button id="cart-button"
                                    type="button"
                                    class="btn btn-outline-dark shadow-none"
                                    @onclick="e => AddProductToCard(product.Id)">
                                <span class="fas-icon fas fa-shopping-cart align-middle" aria-hidden="true"></span>
                            </button>
                        </div>
                        <div class="col">
                            @if (product.Price < product.PriceBeforeDiscount)
                            {
                                <h6 class="text-muted price-befor-discount">@product.PriceBeforeDiscount zł</h6>
                            }
                            <h4 class="price">@product.Price zł</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>