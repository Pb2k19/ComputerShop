@inject IProductsService ProductService
@inject NavigationManager NavigationManager

<style>
    .suggestions {
        position: absolute;
        top: 45px;
        width: 100%;
    }
</style>

<div class="col" @onfocusout="OnFocusOut">
    <div>
        <div class="input-group d-flex w-100 mt-sm-4 mt-xxl-0">
            <input class="form-control shadow-none bg-light" type="search" placeholder="Szukaj" aria-label="Search"
                   @bind-value="Text" @bind-value:event="oninput" @onkeyup="OnSearch" @ref="searchInput" @onfocus="OnFocus">
            <button class="btn btn-primary shadow-none" type="submit" @onclick="Find">
                <i class="fas fa-search"></i>
            </button>
            <div class="bg-light shadow ps-1 suggestions border-1 rounded" style=" @(isSuggestionsVisable ? " ":"visibility: hidden;")">
                <ul id="suggestions" class="my-1 ps-2" style="list-style-type: none;">
                    @if (suggestions != null && suggestions.Count > 0)
                    {
                        foreach (var suggestion in suggestions)
                        {
                            <li class="cursorHand p-2" @onmousedown="()=>OnMouseDown(suggestion)">@suggestion</li>
                        }
                    }
                </ul>
            </div>
        </div>
        
    </div>
</div>
