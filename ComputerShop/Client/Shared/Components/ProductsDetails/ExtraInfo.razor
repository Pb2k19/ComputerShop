@if (Properties?.Count > 0)
{
    <style>
        h4 {
            margin-top: 10px;
        }
    </style>
    <h4>Informacje dodatkowe</h4>
    <div>
        @for (int i = 0; i < Properties.Count; i++)
        {
            <div class="row @(i % 2 == 0 ? "bg-primary rounded" : "")" style="--bs-bg-opacity: .2;">
                <div class="col-6">
                    @Properties[i].Name
                </div>
                <div class="col-6">
                    @Properties[i].Value
                </div>
            </div>
        }
    </div>
}

@code
{
    [Parameter] public List<Prop>? Properties { get; set; }
}
