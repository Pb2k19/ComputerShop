@if (Properties?.Count > 0)
{
    <h4>Informacje dodatkowe</h4>
    <div>
        @for (int i = 0; i < Properties.Count; i++)
        {
            <div class="row @(i % 2 == 0 ? "bg-secondary rounded" : "")" style="--bs-bg-opacity: .15;">
                <div class="col-6">
                    @Properties[i].Key
                </div>
                <div class="col-6">
                    @Properties[i].Value
                </div>
            </div>
        }
    </div>
}

@code
{
    [Parameter] public List<KeyValue>? Properties { get; set; }
}
