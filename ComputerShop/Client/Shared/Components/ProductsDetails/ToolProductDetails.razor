@if (toolProduct != null)
{
    <div>
        <div class="row bg-secondary rounded" style="--bs-bg-opacity: .15;">
            <div class="col-sm-6 text-md-end">
                Producent
            </div>
            <div class="col-sm-6">
                @toolProduct.Manufacturer
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 text-md-end">
                Model
            </div>
            <div class="col-sm-6">
                @toolProduct.Name
            </div>
        </div>
        <div class="row bg-secondary rounded" style="--bs-bg-opacity: .15;">
            <div class="col-sm-6 text-md-end">
                Rodzaj
            </div>
            <div class="col-sm-6">
                @toolProduct.ToolType
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 text-md-end">
                Rozmiar
            </div>
            <div class="col-sm-6">
                @toolProduct.Lenghtmm / @toolProduct.Widthmm / @toolProduct.Heightmm mm
            </div>
        </div>
        <div class="row bg-secondary rounded" style="--bs-bg-opacity: .15;">
            <div class="col-sm-6 text-md-end">
                Długość gwarancji
            </div>
            <div class="col-sm-6">
                @toolProduct.WarantyMonths mies.
            </div>
        </div>
    </div>
}

@code
{
    [Parameter] public IProduct? Product { get; set; }
    private IToolProduct? toolProduct;

    protected override void OnParametersSet()
    {
        if (Product != null && Product is IToolProduct)
            toolProduct = Product as IToolProduct;
        base.OnParametersSet();
    }
}
