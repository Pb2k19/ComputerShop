@if (InvoiceDetailsForBusiness != null && OnValidSubmit != null)
{
    <EditForm Model="InvoiceDetailsForBusiness" OnValidSubmit="OnValidSubmit">
        <DataAnnotationsValidator />
        <div class="mb-3">
            <h5 for="invoice-name">Nazwa firmy</h5>
            <InputText id="invoice-name" class="form-control shadow-none" @bind-Value="InvoiceDetailsForBusiness.Name" />
            <ValidationMessage For="@(() => InvoiceDetailsForBusiness.Name)" />
        </div>
        <div class="mb-3">
            <h5 for="invoice-nip">Numer NIP</h5>
            <InputText id="invoice-nip" class="form-control shadow-none" @bind-Value="InvoiceDetailsForBusiness.Nip" />
            <ValidationMessage For="@(() => InvoiceDetailsForBusiness.Nip)" />
        </div>
        <div class="mb-3">
            <h5 for="invoice-city">Miasto</h5>
            <InputText id="invoice-city" class="form-control shadow-none" @bind-Value="InvoiceDetailsForBusiness.City" />
            <ValidationMessage For="@(() => InvoiceDetailsForBusiness.City)" />
        </div>
        <div class="mb-3">
            <h5 for="invoice-street">Adres</h5>
            <InputText id="invoice-street" class="form-control shadow-none" @bind-Value="InvoiceDetailsForBusiness.Street" />
            <ValidationMessage For="@(() => InvoiceDetailsForBusiness.Street)" />
        </div>
        <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="btn btn-primary shadow-none">@ButtonText</button>
        </div>
    </EditForm>
}


@code {
    [Parameter] public InvoiceDetailsForBusiness InvoiceDetailsForBusiness { get; set; } = new();
    [Parameter] public Action? OnValidSubmit { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Zapisz";
}
